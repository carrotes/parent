<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.itcuc.base.dao.UserDao">
	<select id="findByUserId" parameterType="java.lang.String"
		resultMap="user">
		SELECT * FROM user WHERE user_id=#{id} and delete_flag!=1
	</select>
	<insert id="addUser" parameterType="com.itcuc.base.entity.User">
		INSERT INTO user 
		(user_id,user_account,user_email,user_password,user_gender,image_id,
		create_time,modify_time,delete_flag)
		VALUES
		(#{userId},#{userAccount},#{userEmail},#{userPassword},#{userGender},
		#{imageId},{createTime},#{modifyTime},#{deleteFlag})        
	</insert>

	<resultMap type="com.itcuc.base.entity.User" id="user">
		<id column="user_id" property="userId" />
		<result column="user_account" property="userAccount" />
		<result column="user_name" property="userName" />
		<result column="user_email" property="userEmail" />
		<result column="user_password" property="userPassword" />
		<result column="user_gender" property="userGender" />
		<result column="image_id" property="imageId" />
		<result column="create_time" property="createTime" />
		<result column="modify_time" property="modifyTime" />
		<result column="delete_flag" property="deleteFlag" />
	</resultMap>
</mapper>